@model AddSubjectView
@{
    ViewBag.Title = "Create Subject";
}
@inject SchoolDbContext context;
<div>
    <h1>ĐĂNG KÝ MÔN HỌC</h1>
    <form asp-controller="Subject" asp-action="Create" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <fieldset>
            <legend>Thông tin môn học</legend>
            <div class="row form-group">
                <label asp-for="SubjectName" class="col-2"></label>
                <div class="col-10">
                    <input asp-for="SubjectName" class="form-control" autocomplete="off" />
                    <span asp-validation-for="SubjectName" class="text-danger"></span>
                </div>
            </div>
            <div class="row form-group">
                <label asp-for="MajorId" class="col-2"></label>
                <div class="col-10">
                    <select asp-for="MajorId" asp-items="@(new SelectList(Model.Major.ToList(), "MajorId", "MajorName"))" class="custom-select"></select>
                </div>
            </div>
        </fieldset>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
</div>
