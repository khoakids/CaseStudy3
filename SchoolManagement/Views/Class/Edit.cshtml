@model UpdateClass

@{
    ViewBag.Title = "Update Class";
}

<div>
    <h1>CẬP NHẬT THÔNG TIN LỚP HỌC</h1>
    <form asp-controller="Class" asp-action="Edit" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <fieldset>
            <legend>Thông tin chương trình</legend>
            <div class="row form-group">
                <label asp-for="ClassName" class="col-2"></label>
                <div class="col-10">
                    <input type="hidden" asp-for="ClassId" class="form-control" autocomplete="off" />
                    <input asp-for="ClassName" class="form-control" autocomplete="off" />
                    <span asp-validation-for="ClassName" class="text-danger"></span>
                </div>
            </div>
            <div class="row form-group">
                <label asp-for="MajorId" class="col-2"></label>
                <div class="col-10">
                    <select asp-for="MajorId" asp-items="@(new SelectList(Model.Majors.ToList(), "MajorId", "MajorName"))" class="custom-select"></select>
                </div>
            </div>
            <div class="row form-group">
                <label asp-for="CourseId" class="col-2"></label>
                <div class="col-10">
                    <select asp-for="CourseId" asp-items="@(new SelectList(Model.Course.ToList(), "CourseId", "CourseId"))" class="custom-select"></select>
                </div>
            </div>
            <div class="row form-group">
                <label asp-for="SubjectId" class="col-2"></label>
                <div class="col-10">
                    <select asp-for="SubjectId" asp-items="@(new SelectList(Model.Subject.ToList(), "SubjectId", "SubjectName"))" class="custom-select"></select>
                </div>
            </div>
        </fieldset>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Cập nhật</button>
            <a asp-controller="Class" asp-action="Index" class="btn btn-primary">Hủy</a>
        </div>
    </form>
</div>