@model AddClassView
@{
    ViewBag.Title = "Create Subject";
}
@inject SchoolDbContext context;
<div>
    <h1>ĐĂNG KÝ LỚP HỌC</h1>
    <form asp-controller="Class" asp-action="Create" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <fieldset>
            <legend>Thông tin môn học</legend>
            <div class="row form-group">
                <label asp-for="ClassName" class="col-2"></label>
                <div class="col-10">
                    <input asp-for="ClassName" class="form-control" autocomplete="off" />
                    <span asp-validation-for="ClassName" class="text-danger"></span>
                </div>
            </div>
            <div class="row form-group">
                <label asp-for="MajorId" class="col-2"></label>
                <div class="col-10">
                    <select asp-for="MajorId" asp-items="@(new SelectList(Model.Majors.ToList(), "MajorId", "MajorName"))" class="custom-select"></select>
                </div>
            </div>
            <div class="row form-group">
                <label asp-for="CourseId" class="col-2"></label>
                <div class="col-10">
                    <select asp-for="CourseId" asp-items="@(new SelectList(Model.Course.ToList(), "CourseId", "CourseId"))" class="custom-select"></select>
                </div>
            </div>
            <div class="row form-group">
                <label asp-for="SubjectId" class="col-2"></label>
                <div class="col-10">
                    <select asp-for="SubjectId" asp-items="@(new SelectList(Model.Subject.ToList(), "MajorId", "SubjectName"))" class="custom-select"></select>
                </div>
            </div>
        </fieldset>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
</div>