@model AddCourse

@{ 
    ViewBag.Title = "Create Course";
}

<div>
    <h1>ĐĂNG KÝ KHÓA HỌC</h1>
    <form asp-controller="Course" asp-action="Create" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <fieldset>
            <legend>Thông tin khóa học</legend>
            <div class="row form-group">
                <label asp-for="StartDay" class="col-2"></label>
                <div class="col-10">
                    <input asp-for="StartDay" class="form-control" autocomplete="off" />
                    <span asp-validation-for="StartDay" class="text-danger"></span>
                </div>
            </div>
            <div class="row form-group">
                <label asp-for="FinishDay" class="col-2"></label>
                <div class="col-10">
                    <input asp-for="FinishDay" class="form-control" autocomplete="off" />
                    <span asp-validation-for="FinishDay" class="text-danger"></span>
                </div>
            </div>
        </fieldset>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
</div>