@model AddStudentView
@{
    ViewBag.Title = "Create Student";
}
@inject SchoolDbContext context;
<div>
    <h1>ĐĂNG KÝ HỌC SINH</h1>
    <form asp-controller="Student" asp-action="Create" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <fieldset>
            <legend>Thông tin học sinh</legend>
            <div class="row form-group">
                <label asp-for="StudentName" class="col-2"></label>
                <div class="col-10">
                    <input asp-for="StudentName" class="form-control" autocomplete="off" />
                    <span asp-validation-for="StudentName" class="text-danger"></span>
                </div>
            </div>
            <div class="row form-group">
                <label asp-for="Birthday" class="col-2"></label>
                <div class="col-10">
                    <input asp-for="Birthday" class="form-control" autocomplete="off" />
                    <span asp-validation-for="Birthday" class="text-danger"></span>
                </div>
            </div>
            <div class="row form-group">
                <label asp-for="ClassId" class="col-2"></label>
                <div class="col-10">
                    <select asp-for="ClassId" asp-items="@(new SelectList(Model.Classes.ToList(), "ClassId", "ClassName"))" class="custom-select"></select>
                </div>
            </div>
            <div class="row form-group">
                <label asp-for="PhoneNumber" class="col-2"></label>
                <div class="col-10">
                    <input asp-for="PhoneNumber" class="form-control" autocomplete="off" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="row form-group">
                <label asp-for="Email" class="col-2"></label>
                <div class="col-10">
                    <input asp-for="Email" class="form-control" autocomplete="off" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
        </fieldset>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
</div>